{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"lib": [
			"es2020",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@services/*": [
				"src/services/*"
			],
			"@gui/*": [
				"src/services/templates/*"
			],
			"@diagnostics/*": [
				"src/services/diagnostics/*"
			],
			"@localization/*": [
				"./src/localization/*"
			],
			"@events/*": [
				"src/services/events/*"
			],
			"@commands/*": [
				"src/services/commands/*"
			]
		},
		"baseUrl": "."
	},
	"include": [
		"src/**/*",
		"webview/js/icons/iconsManager.d.ts",
		"webview/js/diagnostics/diagnosticsManager.js",
		"webview/js/tabs/tabManager.js",
		"webview/js/gui/uiEffects.js",
		"webview/js/icons/iconsManager.js",
		"src/services"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}